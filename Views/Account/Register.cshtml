@model AnywayStore.Models.RegisterViewModel

@{
    ViewBag.Title = "Register Page";
}

<div class="page-top-info">
    <div class="container">
        <h4>Register Page</h4>
        <div class="site-pagination">
            <a href="@Url.Action("Index", "Home")">Home</a> /
            <a href="@Url.Action("Index", "Products")">Shop</a>
        </div>
    </div>
</div>

<div class="col-md-12 text-center">
    <br />

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div style="margin: 0% 25% 0% 25%">
            <h4>Create a new account.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Full Name" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            @Html.DropDownListFor(m => m.SelectedRole, new SelectList(ViewBag.Roles, "Name", "Name"), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
